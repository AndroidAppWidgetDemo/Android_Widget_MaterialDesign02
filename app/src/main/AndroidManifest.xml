<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yifeng.mdstudysamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tablayout_top.TabLayoutTopActivity"
            android:label="TabLayout_Top"
            android:screenOrientation="portrait" />

        <activity
            android:name=".tablayout_bottom.TabLayoutBottomActivity"
            android:label="TabLayoutSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".snackbar.SnackbarActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".fab.FloatingActionButtonActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".palette.PaletteDetailActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".appbar.AppBarLayoutActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait"
            android:theme="@style/Base.AppTheme" />

        <activity
            android:name=".behaviornested.BehaviorNestedActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".behaviordependent.BehaviorDependentActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".behaviornestedexpand.BehaviorNestedExpandActivity"
            android:label="SnackbarSamples"
            android:screenOrientation="portrait" />

        <activity
            android:name=".textinput.TextInputActivity"
            android:label="TextInputLayout"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".bottomnavigation.BottomNavigationActivity"
            android:label="BottomNavigation"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".behaviordependent.SearchResultActivity"
            android:label="@string/search_result"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

    </application>

</manifest>